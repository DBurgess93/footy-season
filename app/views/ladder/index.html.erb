<h1>Ladder Page</h1>
<table class="table table-dark table-zebra" >
  <thead>
    <tr>
      <th>Position</th>
      <th>Team</th>
    </tr>
  </thead>
  <thead>
    <tbody>
      <% @teams.each_with_index do |team, index| %>
        <tr>
          <td> <%= index + 1 %> </td>
          <td> <%= link_to team.name, team_path(team) %> </td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>
